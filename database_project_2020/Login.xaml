<Window x:Class="database_project_2020.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:database_project_2020"
        mc:Ignorable="d"
        Title="Login" Height="320" Width="300" FontSize ="14" Background="#40030E">
    <Border Background="#8C1C03" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txUsername"/>
            <Label Content="Mot de Passe" Foreground="White"/>
            <PasswordBox Name="txPasseword"/>
            <Button Name ="btnSubmit" Content="Connexion" Margin="60 10" Click="BtnSubmit_Click"/>

        </StackPanel>
    </Border>
</Window>
